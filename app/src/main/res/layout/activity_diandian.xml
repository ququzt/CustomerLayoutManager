<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efefef">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_diandian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/ly_bottom">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="点点"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="@dimen/circle_width"
                android:layout_height="@dimen/circle_width"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:src="@mipmap/upsdk_cancel_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="@dimen/circle_width"
                android:layout_height="@dimen/circle_width"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_my_info_like"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>